extends ../layouts/common
block content
block header	

	h2.text-center ADD USER
	.container-sm
		if errors
			each error in errors
				.alert.alert-danger= error
		form.d-flex.flex-column(action="/users/create", method="POST")
			.container-sm.w-50.d-flex.flex-row.mt-3
				div(class="input-group-prepend")
					span(class="input-group-text" id="inputGroup-sizing-default") Name
				input(type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="name" value=values ? values.name : '')
			.container-sm.w-50.d-flex.flex-row.mt-3
				div(class="input-group-prepend")
					span(class="input-group-text" id="inputGroup-sizing-default") Phone
				input(type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="phone" value=values ? values.phone : '')
			.mt-3.mx-auto
				button(class="btn btn-primary ml-2") ADD