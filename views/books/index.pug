extends ../layouts/common
block content
block header
    form(class="d-flex" action="/books/search",method="GET")
      input(class="form-control" type="text", name="q")
      button(class="btn btn-primary ml-2") SEARCH

    ul(class="list-group")
      each book in books
        li(class="list-group-item")
          span= book.title
          span(class="")
            a(class="btn btn-danger btn btn-primary m-2 float-right" role="button" href="/books/" + book.id + "/delete") DELETE
            a(class="btn btn-primary m-2 float-right" role="button" href="/books/" + book.id + "/update") UPDATE
    a(class="btn btn-primary m-2" role="button" href="/books/create") ADD BOOK
    a(class="btn btn-primary m-2" role="button" href="/users") GOTO USERS
    a(class="btn btn-primary m-2" role="button" href="/transactions") GOTO TRANSACTIONS

